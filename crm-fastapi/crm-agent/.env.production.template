# Docker Environment File for Production Deployment
# Copy this to .env.production and update values

# ========================================
# OpenAI Configuration
# ========================================
OPENAI_API_KEY=sk-proj-YOUR_API_KEY_HERE
OPENAI_MODEL=gpt-4-turbo

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string for Docker Compose deployment
# Format: postgresql+asyncpg://username:password@hostname:port/database
# 
# Options:
# - Local: postgresql+asyncpg://crm_user:password@localhost:5432/crm_db
# - Docker: postgresql+asyncpg://crm_user:password@postgres:5432/crm_db
# - Remote: postgresql+asyncpg://crm_user:password@db.example.com:5432/crm_db

DATABASE_URL=postgresql+asyncpg://crm_user:YOUR_PASSWORD@postgres:5432/crm_db

# ========================================
# Application Settings
# ========================================
DEBUG=False
APP_NAME=CRM Agent
APP_VERSION=1.0.0
ENVIRONMENT=production
LOG_LEVEL=info

# ========================================
# Security Settings
# ========================================
# IMPORTANT: Change these in production!
SECRET_KEY=your-production-secret-key-change-this-immediately
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ========================================
# Database Connection Pool Settings
# ========================================
# Connection pool tuning for production
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ========================================
# Server Configuration
# ========================================
# FastAPI server settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ========================================
# Scheduler Configuration
# ========================================
# APScheduler settings
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# ========================================
# Logging Configuration
# ========================================
LOG_FORMAT=json
LOG_FILE=/var/log/crm_agent/app.log
